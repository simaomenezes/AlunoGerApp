			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/site"
				android:text="Site: "/>
			<EditText 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="Digite o Site"
				android:id="@+id/edtSite"/>
				
			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/nota"
				android:text="Nota: "/>
			<EditText 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="Digite a nota"
				android:id="@+id/edtNota"/>
				
			<Button 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Inserir"
				android:id="@+id/btnInsert"/>
				
		</LinearLayout>
		
	</ScrollView>    
</LinearLayout>

